<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="recipeRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/dimen_4</item>
    </style>

    <style name="progressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_8</item>
    </style>


    <style name="RecipeTitleText">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="fontFamily">@font/avenir_ltstd_black</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="RecipeTitleTextViewHolder">
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="fontFamily">@font/avenir_ltstd_black</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="RecipeDescText">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="fontFamily">@font/crete_round_regular</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="RecipeDescTextAdapter" parent="RecipeDescText">
        <item name="android:maxLines">2</item>
    </style>

    <style name="RecipeDescNoEllipseText">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_8</item>
        <item name="fontFamily">@font/crete_round_regular</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="RecipeImage">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ErrorStatusView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_8</item>
    </style>

    <style name="pageIndicatorView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="dotsColor">@color/colorPrimary</item>
        <item name="dotsCornerRadius">@dimen/dimen_8</item>
        <item name="dotsSize">@dimen/dimen_8</item>
        <item name="dotsSpacing">4dp</item>
        <item name="dotsStrokeColor">@color/textColorLight</item>
        <item name="dotsStrokeWidth">2dp</item>
    </style>
</resources>
